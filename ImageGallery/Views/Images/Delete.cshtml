@model ImageGallery.Models.Image
@{
    ViewData["Title"] = "Delete";
}
<h2>Delete Photo</h2>
<hr />
<head>
    <style>
        .detailbox {
            padding-left: 25%;
            padding-right: 25%;
        }

        .detailinfo {
            align-content: center;
            padding: 10%;
            background-color: #fff;
            border-radius: 3px;
            border: 1px solid #e6e6e6;
            margin-left: -1px;
            margin-right: -1px;
            align-content: center;
            padding: 10%;
        }

        body {
            background-image: linear-gradient(to bottom right, #fafafa, white);
        }
    </style>
</head>
<div class="detailbox">
    <h4 style="padding:10px; border-radius:8px; background:#f96666; color:white; text-align:center;">Are you sure you want to delete this?</h4>
    <div class="detailinfo" style="background-color:#fafafa; border-radius:8px;">
        <dl class="dl-horizontal">
            @* <dt>
                    @Html.DisplayNameFor(model => model.Caption)
                </dt>*@
            <dd>
                <b>
                    @Html.DisplayFor(model => model.Caption)
                </b>
            </dd>
            @* <dt>
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>
                <dd>
                    @Html.DisplayFor(model => model.Location)
                </dd>
                @* <dt>
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>*@
            <dd>
                <img src="~/images/icons/icons8-marker-24.png">
                @Html.DisplayFor(model => model.Location)
            </dd>
            @* <dt>
                    @Html.DisplayNameFor(model => model.Url)
                </dt>*@
        </dl>
        <dl class="dl-horizontal">
            <dd>
                @*@Html.DisplayFor(model => model.Url)*@
                <img class="img-responsive" src="@Url.Content("~/images/items/" + @Model.Url)" alt="">
            </dd>
        </dl>
        <dl class="dl-horizontal">
            @*<dt>
                    @Html.DisplayNameFor(model => model.UserID)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => model.Created)
            </dd>
            @*<dt>
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            @*<dt>
                    @Html.DisplayNameFor(model => model.Album)
                </dt>*@
            <dd>
                @Html.DisplayFor(model => model.Album.Title)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ImageID" />
            <input type="submit" value="Delete" class="btn btn-default" />
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
